@{
    ViewData["Title"] = "Register";
}

@model CookMate.Controllers.RegisterModel

<head>
    <link rel="stylesheet" href="~/css/register.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="email" type="text" placeholder="E-mail">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="username" type="text" placeholder="Username">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="nome" type="text" placeholder="Name">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="password" type="password"  placeholder="Password">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="sndPassword" type="password" placeholder="Repeat Password">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="dia"   pattern="[0-9]{2}" placeholder="Day">
                        <input asp-for="mes" pattern="[0-9]{2}" placeholder="Month">
                        <input asp-for="ano"  pattern="[0-9]{4}" placeholder="Year">
                    </div>
                </form>
            </div>
            <div class="d-flex justify-content-center mt-3 login_container">
                <button type="button" name="button" asp-area="" asp-controller="Register" asp-action="Login" class="btn login_btn">Next</button>
            </div>
        </div>
    </div>
</div>
