@{
    ViewData["Title"] = "Register";
}

@model CookMate.Controllers.RegisterModel

<head>
    <link rel="stylesheet" href="~/css/register.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-controller="Register" asp-action="Register" method="post">
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="email" placeholder="E-mail">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("InvalidEmail")
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="username" placeholder="Username">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("UsernameAlreadyExists")
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("EmptyName")
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="nome" placeholder="Name">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("EmptyName")
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="password" type="password" placeholder="Password">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="sndPassword" type="password" placeholder="Repeat Password">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("NonMatchingPasswords")
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="dia" pattern="[0-9]{2}" placeholder="Day">
                        <input asp-for="mes" pattern="[0-9]{2}" placeholder="Month">
                        <input asp-for="ano" pattern="[0-9]{4}" placeholder="Year">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("InvalidAge")
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" name="button" class="btn login_btn">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
