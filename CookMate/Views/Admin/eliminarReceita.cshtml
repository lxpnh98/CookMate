@{
    ViewData["Title"] = "Remover";
}
 
<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <form>
                <div class="d-flex justify-content-center form_container">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="receita" type="text" placeholder="Id da Receita">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" name="button" class="btn login_btn">Remover</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>