@{
    ViewData["Title"] = "Remover";
}
@model CookMate.Controllers.EliminarModel

<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <div class="input-group mb-3">
                    <form asp-controller="EliminarReceita" asp-action="EliminarReceita" method="post">
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class=""></i></span>
                            </div>
                            <input asp-for="id" type="text" placeholder="Id da Receita">
                        </div>
                        <div class="text-danger text-wrap">
                            @Html.ValidationMessage("WrongId")
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" name="button" class="btn login_btn">Remover</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>  
</div>