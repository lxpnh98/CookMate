@{
    ViewData["Title"] = "Login";
}
@model CookMate.Controllers.LoginModel

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-controller="Login" asp-action="Login" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        
                        <input asp-for="username" placeholder="Username">

                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input asp-for="password" placeholder="Password">
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" name="button" class="btn login_btn">Login</button>
                    </div>
                </form>
            </div>
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Don't have an account?
                    <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Register">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
