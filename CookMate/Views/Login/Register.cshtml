@{
    ViewData["Title"] = "Register";
}

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input type="text" name="" class="form-control input_email" value="" placeholder="E-mail">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input type="text" name="" class="form-control input_user" value="" placeholder="Username">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input type="text" name="" class="form-control input_name" value="" placeholder="Name">
                    </div>
                    <div class="input-group mb-1">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input type="password" name="" class="form-control input_pass" value="" placeholder="Password">
                    </div>
                    <div class="input-group mb-0.75">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class=""></i></span>
                        </div>
                        <input type="password" name="" class="form-control input_pass" value="" placeholder="Repeat Password">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input type="text" class="form-control" pattern="[0-9]{2}" placeholder="Day">
                        <input type="text" class="form-control" pattern="[0-9]{2}" placeholder="Month">
                        <input type="text" class="form-control" pattern="[0-9]{4}" placeholder="Year">
                    </div>
                </form>
            </div>
            <div class="d-flex justify-content-center mt-3 login_container">
                <button type="button" name="button" class="btn login_btn">Next</button>
            </div>
        </div>
    </div>
</div>