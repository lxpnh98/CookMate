@{
    ViewData["Title"] = "Receita";
}

<head>
    <link rel="stylesheet" href="~/css/addReceita.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-controller="" asp-action="" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="ordem" type="text" name="" class="form-control input_ingredientes" value="" placeholder="Order">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="descricao" type="text" name="" class="form-control input_ingredientes" value="" placeholder="Description">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="tempo" type="number" name="" class="form-control input_ingredientes" value="" placeholder="Time">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="recurso" type="text" name="" class="form-control input_ingredientes" value="" placeholder="Video/image">
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col">
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="button" name="button" class="btn login_btn">Add</button>
                    </div>
                </div>
                <div class="col">
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="button" name="button" class="btn login_btn">Next Step</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>