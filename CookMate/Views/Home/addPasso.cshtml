@{
    ViewData["Title"] = "AddPasso";
}
@model CookMate.Controllers.AddPassoModel

<head>
    <link rel="stylesheet" href="~/css/addReceita.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-controller="AddPasso" asp-action="Initial" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="ordem" type="number" name="" class="form-control input_ingredientes" value="" placeholder="Order">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="descricao" type="text" name="" class="form-control input_ingredientes" value="" placeholder="Description">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="time" type="number" name="" class="form-control input_ingredientes" value="" placeholder="Time">
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="submit" name="button" class="btn login_btn">Next</button>
                    </div>
                </form>
            </div>                
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    <a class="nav-link" asp-area="" asp-controller="AddPasso" asp-action="AddRecurso"><b>AddResource</b></a>
                </div>
            </div>
            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    <a class="nav-link" asp-area="" asp-controller="AddPasso" asp-action="Confirm"><b>Confirm</b></a>
                </div>
            </div>
        </div>
    </div>
</div>
