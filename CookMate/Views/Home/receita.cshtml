<div class="container-fluid">
        <h1>Bolo de Bolacha</h1>
        <div class="row">
            <div class="col-sm-6">
                <b>Ingredientes:</b> (para 8 pessoas)
                <ul class="list-group">
                    @foreach (var i in (List<Ingrediente>)ViewData["ingredientes"])
                    {
                        <li class="list-item" style="margin-left: 2.5em;">@(i.nome) - @(i.valor) @(i.unidade)</li>
                    }
                </ul>
                <b>Utensílios:</b>
                <ul class="list-group">
                    @foreach (var u in (List<Utensilio>)ViewData["utensilios"])
                    {
                        <li class="list-item" style="margin-left: 2.5em;">@(u.nome)</li>
                    }
                </ul>
                <b>Preparação:</b>
                <ul class="list-group">
                    @foreach (var p in (List<Passo>)ViewData["passos"])
                    {
                        <li class="list-item" style="margin-left: 2.5em;"><a class="nav-link" href="/Passo/@(p.id)">@(p.titulo)</a></li>
                    }
                </ul>
            </div>
            <div class="col-sm-6">
                <b>Informação Adicional:</b>
