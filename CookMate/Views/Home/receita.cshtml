@{
    ViewData["Title"] = "Receita";
}
<head>
    <link rel="stylesheet" href="~/css/menu.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<ul>
    <li> <a asp-controller="Receita" asp-action="Menu">Back</a></li>
    <li style="float:right"><a class="active">@ViewData["username"]</a></li>
</ul>

    <div class="container-fluid">
        <h1>Bolo de Bolacha</h1>
        <div class="row">
            <div class="col">
                <b>Ingredientes:</b> (para 8 pessoas)
                <ul class="list-group">
                    @foreach (var i in (List<Ingrediente>)ViewData["ingredientes"])
                    {
                        <li class="list-item" style="margin-left: 2.5em;">@(i.nome) - @(i.valor) @(i.unidade)</li>
                    }
                </ul>
                <b>Utensílios:</b>
                <ul class="list-group">
                    @foreach (var u in (List<Utensilio>)ViewData["utensilios"])
                    {
                        <li class="list-item" style="margin-left: 2.5em;">@(u.nome)</li>
                    }
                </ul>
                <b>Preparação:</b>
                <ul class="list-group">
                    @foreach (var p in (List<Passo>)ViewData["passos"])
                    {
                        <li class="list-item" style="margin-left: 2.5em;"><a class="nav-link" href="/api/Passo/@(p.id)">@(p.titulo)</a></li>
                    }
                </ul>
            </div>
            <div class="col">
                <div align="left">
                    <a asp-area="" asp-controller="Receita" asp-action="ReceitaFavorita"><font color="orange"><b>Receita Favorita</b></font></a>
                </div>
                <div align="left">
                    <a asp-controller="Receita" asp-action="ClassificarReceita"><font color="orange"><b>Classificar Receita</b></font></a>
                </div>
                <div align="left">
                    <a asp-controller="Receita" asp-action="Adicionar"><font color="orange"><b>Adicionar Ingredinetes à Lista de Compras</b></font></a>
                </div>
                <h1><small>Informação Adicional:</small></h1>
                <h2><small>Recursos Auxiliares:</small></h2>
                @foreach (var r in (List<Recurso>)ViewData["recursos"])
                {
                    switch (r.tipo)
                    {
                        case 0:
                            <iframe class="embed-responsive-item" src="@(r.Video.ficheiro)" width="400" height="300"></iframe>
                            break;
                        case 1:
                            <img src="@(r.Imagem.ficheiro)" width="400" height="300">
                            break;
                        case 2:
                            <li>@(r.Descricao.texto)</li>
                            break;
                        case 3:
                            <a href=@(r.Hiperligacao.url)>@(r.Hiperligacao)</a>
                            break;
                    }
                }
