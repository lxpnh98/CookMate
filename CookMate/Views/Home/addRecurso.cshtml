@{
    ViewData["Title"] = "Receita";
}
@model CookMate.Controllers.AddReceitaModel

<head>
    <link rel="stylesheet" href="~/css/addReceita.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="https://i.imgur.com/EfK7afs.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form asp-controller="AddReceita" asp-action="Initial" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="titulo" placeholder="Title">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("TituloInvalido")
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="dificuldade" type="number" pattern="[1-5]{1}" placeholder="Difficulty">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("DificuldadeInvalida")
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="valorEnergetico" type="number" pattern="[0-9]+" placeholder="Energetic value">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("ValorEnergeticoInvalida")
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                        <input asp-for="categoria" placeholder="Category">
                    </div>
                    <div class="text-danger text-wrap">
                        @Html.ValidationMessage("CategoriaInvalida")
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="submit" name="button" class="btn login_btn">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>