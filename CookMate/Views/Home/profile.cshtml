@{
    var user = (Utilizador)@ViewData["user"];
    ViewData["Title"] = user.nome;
}

<head>
    <link rel="stylesheet" href="~/css/menu.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<ul class="head">
    <li> <a asp-controller="Profile" asp-action="Menu">Back</a></li>
    <li style="float:right"><a class="active">@ViewData["username"]</a></li>
</ul>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="@user.imagePath" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>@user.nome</h4>
                        <p>
                            E-mail: @user.email
                            <br />
                            Username: @user.username
                            <br />
                            Description: @user.descricao
                        </p>
                        <div class="btn-group">
                            <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Delete"><font color="orange"><b>Delete Account</b></font></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

