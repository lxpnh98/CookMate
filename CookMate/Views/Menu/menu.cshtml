@{
    ViewData["Title"] = "Menu";
}

<head>
    <link rel="stylesheet" href="~/css/menu.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<ul>
    <li> <a asp-controller="Home" asp-action="Favorite">Favorite Recipes</a></li>
    <li> <a asp-controller="Login" asp-action="Logout">Shopping list</a></li>
    <li> <a href="/api/Utilizador/@ViewData["id"]">Profile</a> </li>
    <li> <a asp-controller="Home" asp-action="AddReceita">Add New Recipe</a> </li>
            @Html.ValidationMessage("NaoAutorizado")
    <li> <a asp-controller="Home" asp-action="ClassificarApp">Classify application</a> </li>
    <li> <a asp-controller="Home" asp-action="Logout">Logout</a> </li>
    <li style="float:right"><a class="active">@ViewData["username"]</a> </li>
</ul>

<form>
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <h1>Suggested Recipes</h1>
            <div class="col-lg-9 content-right">
                <div class="well well-sm">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="What are you looking for?">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div>
                </div>
                <div class="row selected-classifieds">
                    @{
                        var receitas = (Receita[])ViewData["receitas"];
                        foreach (Receita r in receitas) {
                            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                <div class="thumbnail">
                                    <a href="/api/Receita/@r.id"><img src="@r.imagem" /></a>
                                </div>
                                <div class="caption">
                                    <h5><a href="/api/Receita/@r.id">@r.titulo</a></h5>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</form>
